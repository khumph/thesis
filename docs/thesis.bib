journal = {Annual Review of Statistics and Its Application},
keywords = {dynamic treatment regime,nonregularity,q-learning,randomization,reinforcement learning,sequential},
number = {1},
pages = {447--464},
title = {{Dynamic Treatment Regimes}},
volume = {1},
